@{
    ViewData["Title"] = "Selective Sharing";
}

<h1 class="page-header">Selective Sharing</h1>
<p class="page-description">Generate unique links to share specific photos with others.</p>

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <img src="/images/selective-sharing.png" alt="Selective Sharing" class="img-fluid rounded shadow-sm">
        </div>
        <div class="col-md-6">
            <h2 class="text-primary display-4">Share with Confidence</h2>
            <p class="lead">Easily share your memories with the people you trust.</p>
            <ul class="list-unstyled">
                <li class="mb-3"><i class="bi bi-link-45deg text-info"></i> Create unique, time-limited links for sharing.</li>
                <li class="mb-3"><i class="bi bi-person-check-fill text-success"></i> Restrict access to specific individuals.</li>
                <li class="mb-3"><i class="bi bi-eye-fill text-warning"></i> Track who has viewed your shared content.</li>
            </ul>
        </div>
    </div>
</div>