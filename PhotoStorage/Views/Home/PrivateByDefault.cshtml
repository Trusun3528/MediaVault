@{
    ViewData["Title"] = "Private by Default";
}

<h1 class="page-header">Private by Default</h1>
<p class="page-description">Your photos remain private until you choose to share them.</p>

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h2 class="text-primary display-4">Privacy First</h2>
            <p class="lead">Your photos are private by default, giving you full control over who can view them.</p>
            <ul class="list-unstyled">
                <li class="mb-3"><i class="bi bi-lock-fill text-danger"></i> Set permissions for individual photos or albums.</li>
                <li class="mb-3"><i class="bi bi-people-fill text-primary"></i> Share only with specific people or groups.</li>
                <li class="mb-3"><i class="bi bi-x-circle-fill text-warning"></i> Revoke access at any time.</li>
            </ul>
        </div>
        <div class="col-md-6">
            <img src="/images/private-by-default.png" alt="Private by Default" class="img-fluid rounded shadow-sm">
        </div>
    </div>
</div>